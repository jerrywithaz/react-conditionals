  
{
    "include": [
      "src"
    ],
    "exclude": [
      "dist",
      "examples",
      "node_modules"
    ],
    "compilerOptions": {
      "baseUrl": "src",
      "strict": true,
      "esModuleInterop": true,
      "lib": [
        "dom",
        "es2015"
      ],
      "jsx": "react",
      "target": "es5",
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "declaration": true,
      "outDir": "./dist",
      "noEmit": false,
      "paths": {
        "src/components/*": ["components/*"],
        "src/types": ["types"],
        "src/utils/*": ["utils/*"],
      }
    }
  }